    </image>
    -->
    <!-- Blurs help bar on gamelists -->
    <shader name="gamelistblur" extra="true" ifHelpPrompts="true">
      <path>:/shaders/blur.glsl</path>
      <pos>0 0.935</pos>
      <size>1 0.066</size>
      <zIndex>49</zIndex>
      <!-- uniform parameters -->
      <blur>6</blur>
    </shader>
  </view>
